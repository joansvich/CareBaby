{{> navbar}}
<form action="/profile/{{this._id}}/update" method="post">
  <section>
    <article class="profile">
      <div class="profile-details">
        <div class="profile-details-avatar">
          <img src="/images/user.svg" alt="">
        </div>
        <div class="profile-details-info">
          <input class="cards-data-name" type="text" name="username" value="{{this.username}}" />
          <div class="cards-data-location">
            <img src="/images/pointer.svg" alt="">
            <p>Barcelona</p>
          </div>
        </div>
      </div>
      <div class="profile-description">
        <textarea rows="4" cols="55" name="description">{{this.description}}</textarea>
      </div>
      <div class="profile-actions">
        <button class="button" type="submit">Aceptar</button>
      </div>
    </article>
  </section>
</form>