{{> navbar}}
<form action="/profile/update" method="post">
  <section>
    <article class="profile">
      <div class="profile-details">
        <div class="profile-details-avatar">
          <img src="images/user.svg" alt="">
        </div>
        <div class="profile-details-info">
          <p class="cards-data-name"><input type="text" name="username" value="{{this.username}}"></input></p>
          <div class="cards-data-location">
            <img src="/images/pointer.svg" alt="">
            <p>Barcelona</p>
          </div>
        </div>
      </div>
      <div class="profile-description">
        <textarea name="description">{{this.description}}</textarea>
      </div>
      <div class="profile-actions">
        <button class="button" type="submit">Aceptar</button>
      </div>
    </article>
  </section>
</form>